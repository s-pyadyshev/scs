mixin page-header(title, text, background)
  section.page-header(style=`background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), linear-gradient(180deg, transparent 0%, transparent 50%, rgba(0,0,0,1) 100%), url(${background})`)
    .container.text-center
      h1= title
      if text
        p= text

mixin page-header-secondary(title, subtitle, text, background)
  section.page-header.page-header-secondary(style=`background-image: linear-gradient(rgba(16,39,58,0.8), rgba(16,39,58,0.8)), url(${background})`)
    .container.text-center
      h1= title
      if subtitle
        h2= subtitle
      if text
        p= text

mixin page-header-logo(background, logo)
  section.page-header(style=`background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(${background})`)
    .container.text-center
      img(src=logo alt="alt.")