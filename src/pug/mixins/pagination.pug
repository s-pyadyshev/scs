mixin pagination(amount, active, ellipsis, last, arrows = false, inverse)
  //- amount - amount of displayed numbers +1 prior ellipsis
  //- active - active number
  //- ellipsis - number to be replaced by ellipsis
  //- last - number after ellipsis
  //- .icon-pagination-prev and .icon-pagination-next
  nav.pagination(aria-label="pagination" class!= inverse ? 'pagination--inverse' : '')
    //- prev arrow
    if (arrows === true)
      a(href="#" title="Prev page").pagination__prev.icon-pagination-prev ◀
    else

    ul.pagination__list
      //- before ellipsis
      - for (var index = 1; index <= amount; index++)
        if (index === active)
          li.pagination__item.is-active
            a(href="#" title="Current page #{index}").pagination__link= index
        else if (index === ellipsis)
          li.pagination__item
            a(href="#" title="Show more").pagination__link.is-collapsed ...
        else
          li.pagination__item
            a(href="#" title="Go to page #{index}").pagination__link= index
      //- after ellipsis
      - for (var index = amount + 1; index <= last; index++)
        li.pagination__item
          a(href="#" title="Go to pagе #{index}").pagina
          tion__number= index

    //- next arrow
    if (arrows === true)
      a(href="#" title="Next page").pagination__next.icon-pagination-next ▶
    else

